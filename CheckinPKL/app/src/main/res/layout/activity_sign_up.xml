<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <android.support.v7.widget.CardView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textviewsignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="15dp"
                android:text="Sign Up"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:text="Sign Up" />

        <EditText
            android:id="@+id/usersignup"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_action_signupusername"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

            <EditText
                android:id="@+id/emailsignup"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_signupemail"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/passsignup"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_signupupassword"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/nimsignup"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_signupnim"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="NIM"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/buttonsignup"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Sign Up"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>